#include "include/dt-bindings/gpio/gpio.h"
#include "include/dt-bindings/net/ti-dp83867.h"

/ {
	compatible = "amd,versal2";
	model = "AMD Versal VEK385 revA";

	chosen {
		bootargs = "earlycon=pl011,mmio32,0xf1930000 console=ttyAMA0,115200";
		stdout-path = "serial0:115200n8";
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		/* TF-A, TEE, RPUs */
		/* FIXME Uncomment after VNC */
		/* memory@20000000 {
			no-map;
			reg = <0 0 0 0x20000000>;
		};
		*/
	};

	firmware {
		optee: optee { /* Should be injected by firmware */
			compatible = "linaro,optee-tz";
			method = "smc";
		};

		psci: psci { /* Should be injected by firmware */
			compatible = "arm,psci-1.0";
			method = "smc";
		};
	};

	pwm-fan {
		compatible = "pwm-fan";
		status = "okay";
		pwms = <&ttc0 2 40000 1>;
	};
};

/* u272 - TPS66993BAR usb, i2c, DP */
/* CAN at LPD_MIO12-13 FIXME */
/* CAN at LPD_MIO21-22 FIXME */

&ospi { /* PMC_MIO0-10, MIO12 */
	reset-names = "qspi";
	reset-gpios = <&gpio1 12 0>; /* FIXME reset via regs is possible too */
	#address-cells = <1>;
	#size-cells = <0>;

	flash@0 {
		compatible = "jedec,spi-nor"; /* u25 */
		spi-max-frequency = <20000000>; /* FIXME maybe wrong */
		spi-rx-bus-width = <8>;
		spi-tx-bus-width = <8>;
		cdns,tslch-ns = <1>;
		cdns,tchsh-ns = <1>;
		cdns,tsd2d-ns = <0>;
		cdns,tshsl-ns = <0>;
		cdns,read-delay = <0>;
		#size-cells = <1>;
		#address-cells = <1>;
		reg = <0>;
		no-wp;

		partitions {
			#size-cells = <1>;
			#address-cells = <1>;
			compatible = "fixed-partitions";

			partition@0 {
				reg = <0x0 0x200000>;
				label = "ospi-flash0";
			};

			partition@1 {
				reg = <0x200000 0x3e00000>;
				label = "ospi-flash1";
			};
		};
	};
};

&dwc3_1 {
	dr_mode = "host";
	maximum-speed = "high-speed";
	#address-cells = <1>;
	#size-cells = <0>;

	/* 2.0 hub on port 1 */
	hub_2_0: hub@1 {
		compatible = "usb424,2744";
		reg = <1>;
		i2c-bus = <&hub>;
		reset-gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
	};
	/* USB 3.0 is not connected */
	/* port 0 u109 USB-SD converter */
	/* port 1/2 to connector */
};

&i2c0 { /* PMC_MIO42-43 */
	/* board_i2c0 - FMC */
};

&i2c1 { /* PMC_MIO44-45 */
	#address-cells = <1>;
	#size-cells = <0>;

	i2c-arbitrator@72 { /* u161 */
		compatible = "nxp,pca9541";
		reg = <0x72>;

		/* board_i2c1 */
		i2c-arb {
			#address-cells = <1>;
			#size-cells = <0>;
			eeprom: eeprom@54 { /* u35 - also at address 0x5C */
				compatible = "atmel,24c128";
				reg = <0x54>;
				/* wp via SC */
			};

			i2c-mux@77 { /* u253 - WRONG design */
				compatible = "nxp,pca9548";
				#address-cells = <1>;
				#size-cells = <0>;
				reg = <0x77>;
				/* 0 - 3 connected but not described */
				i2c@4 {
					#address-cells = <1>;
					#size-cells = <0>;
					reg = <4>;
					/* usb0_hub */
					hub: usb-hub@74 { /* u111 - FIXME address is weird */
						compatible = "microchip,usb5744";
						status = "disabled";
						reg = <0x74>;
					};

				};
				/* 5 - 7 not connected */
			};
		};
	};
};

&ttc0 { /* PMC_MIO49 FAN_PWM */
	#pwm-cells = <3>;
};

&gem0 { /* MDIO PMC_MIO50/51, MIO0-11 */
	phy-handle = <&phy0>;
	phy-mode = "rgmii-id";

	mdio: mdio {
		#address-cells = <1>;
		#size-cells = <0>;

		phy0: ethernet-phy@1 { /* u112 */
			#phy-cells = <1>;
			reg = <1>;
			compatible = "ethernet-phy-id2000.a231";
			ti,rx-internal-delay = <DP83867_RGMIIDCTL_2_25_NS>;
			ti,tx-internal-delay = <DP83867_RGMIIDCTL_2_75_NS>;
			ti,fifo-depth = <DP83867_PHYCR_FIFO_DEPTH_4_B_NIB>;
			ti,dp83867-rxctrl-strap-quirk;
			reset-assert-us = <100>;
			reset-deassert-us = <280>;
			reset-gpios = <&gpio0 25 GPIO_ACTIVE_LOW>;
		};
	};
};
